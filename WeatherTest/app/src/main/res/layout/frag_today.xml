<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/today_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pul" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="172dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_weather_now"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_time_now"
                    app:srcCompat="@drawable/ic_launcher_foreground"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/tv_temp_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="온도"
                    android:textColor="#888484"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/binggrae"
                    app:layout_constraintEnd_toEndOf="@+id/iv_weather_now"
                    app:layout_constraintHorizontal_bias="0.545"
                    app:layout_constraintStart_toStartOf="@+id/iv_weather_now"
                    app:layout_constraintTop_toBottomOf="@+id/iv_weather_now" />

                <TextView
                    android:id="@+id/tv_time_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="시간"
                    android:textColor="#888484"
                    android:textSize="18sp"
                    app:fontFamily="@font/binggrae"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_weather_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="TextView"
                    android:textColor="#888484"
                    android:textSize="14sp"
                    app:fontFamily="@font/binggrae"
                    app:layout_constraintEnd_toEndOf="@+id/iv_weather_now"
                    app:layout_constraintStart_toStartOf="@+id/iv_weather_now"
                    app:layout_constraintTop_toBottomOf="@+id/tv_temp_now" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_prob_rain_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="65dp"
                    android:text="TextView"
                    android:textAllCaps="false"
                    android:textColor="#888484"
                    android:textSize="16sp"
                    app:fontFamily="@font/binggrae"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_wind_speed_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="TextView"
                    android:textColor="#888484"
                    android:textSize="16sp"
                    app:fontFamily="@font/binggrae"
                    app:layout_constraintStart_toStartOf="@+id/tv_prob_rain_now"
                    app:layout_constraintTop_toBottomOf="@+id/tv_prob_rain_now" />

                <TextView
                    android:id="@+id/tv_wind_dir_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="TextView"
                    android:textColor="#888484"
                    android:textSize="16sp"
                    app:fontFamily="@font/binggrae"
                    app:layout_constraintStart_toStartOf="@+id/tv_prob_rain_now"
                    app:layout_constraintTop_toBottomOf="@+id/tv_wind_speed_now" />

                <TextView
                    android:id="@+id/tv_humidity_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="TextView"
                    android:textColor="#888484"
                    android:textSize="16sp"
                    app:fontFamily="@font/binggrae"
                    app:layout_constraintStart_toStartOf="@+id/tv_prob_rain_now"
                    app:layout_constraintTop_toBottomOf="@+id/tv_wind_dir_now" />

                <TextView
                    android:id="@+id/tv_smog"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="15dp"
                    android:text="TextView"
                    android:textColor="#888484"
                    android:textSize="16sp"
                    app:fontFamily="@font/binggrae"
                    app:layout_constraintStart_toStartOf="@+id/tv_humidity_now"
                    app:layout_constraintTop_toBottomOf="@+id/tv_humidity_now" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:text="시간대별 날씨"
                android:textColor="#888484"
                android:textSize="18sp"
                app:fontFamily="@font/binggrae"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9">

                <LinearLayout
                    android:layout_width="77dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:gravity="fill_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_weather_today1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="15dp"
                        android:baselineAlignBottom="false"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/tv_temp_today1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView"
                        android:textColor="#888484"
                        app:fontFamily="@font/binggrae" />

                    <TextView
                        android:id="@+id/tv_probrain_today1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="TextView"
                        android:textColor="#888484"
                        app:fontFamily="@font/binggrae" />

                    <TextView
                        android:id="@+id/tv_time_today1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="TextView"
                        android:textColor="#888484"
                        android:textStyle="bold"
                        app:fontFamily="@font/binggrae" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="77dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_weather_today2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="15dp"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/tv_temp_today2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView"
                        android:textColor="#888484"
                        app:fontFamily="@font/binggrae" />

                    <TextView
                        android:id="@+id/tv_probrain_today2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="TextView"
                        android:textColor="#888484"
                        app:fontFamily="@font/binggrae" />

                    <TextView
                        android:id="@+id/tv_time_today2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="TextView"
                        android:textColor="#888484"
                        android:textStyle="bold"
                        app:fontFamily="@font/binggrae" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="77dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_weather_today3"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="15dp"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/tv_temp_today3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView"
                        android:textColor="#888484"
                        app:fontFamily="@font/binggrae" />

                    <TextView
                        android:id="@+id/tv_probrain_today3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="TextView"
                        android:textColor="#888484"
                        app:fontFamily="@font/binggrae" />

                    <TextView
                        android:id="@+id/tv_time_today3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="TextView"
                        android:textColor="#888484"
                        android:textStyle="bold"
                        app:fontFamily="@font/binggrae" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="77dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_weather_today4"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="15dp"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/tv_temp_today4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView"
                        android:textColor="#888484"
                        app:fontFamily="@font/binggrae" />

                    <TextView
                        android:id="@+id/tv_probrain_today4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="TextView"
                        android:textColor="#888484"
                        app:fontFamily="@font/binggrae" />

                    <TextView
                        android:id="@+id/tv_time_today4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="TextView"
                        android:textColor="#888484"
                        android:textStyle="bold"
                        app:fontFamily="@font/binggrae" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="77dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_weather_today5"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="15dp"
                        app:srcCompat="@drawable/ic_launcher_foreground"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/tv_temp_today5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="TextView"
                        android:textColor="#888484"
                        app:fontFamily="@font/binggrae" />

                    <TextView
                        android:id="@+id/tv_probrain_today5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="TextView"
                        android:textColor="#888484"
                        app:fontFamily="@font/binggrae" />

                    <TextView
                        android:id="@+id/tv_time_today5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:text="TextView"
                        android:textColor="#888484"
                        android:textStyle="bold"
                        app:fontFamily="@font/binggrae" />
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>